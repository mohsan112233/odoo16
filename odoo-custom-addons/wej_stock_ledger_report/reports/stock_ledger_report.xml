                                                               style="border-bottom: 1px solid black; border-right:0px solid transparent;;border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                            <tr>
                                                                <td t-esc="round(lc['unit_price'],2)"/>
                                                            </tr>
                                                        </table>
                                                    </t>
                                                    <table class="table"
                                                           style="border-bottom: 1px solid black; border-right:0px solid transparent;;border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                        <tr>
                                                            <td t-esc="round(lp['sub_total_price'],2)"/>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </td>

                                            <td>
                                                <t t-foreach="lp['pro_name_color']" t-as="lst">
                                                    <table class="table"
                                                           style="text-align:center; border-bottom: 1px solid black; border-right:0px solid transparent;; border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                        <tr style="width:100%">
                                                            <td t-esc="round(lst['sub_total'],2)"/>
                                                            <t t-set="sub_total_amount"
                                                               t-value="lst['sub_total']+sub_total_amount"/>
                                                            <t t-set="amount_total"
                                                               t-value="amount_total + lst['sub_total']"/>
                                                        </tr>
                                                    </table>
                                                </t>
                                                <table class="table"
                                                       style="text-align:center; border-bottom: 1px solid black; border-right:0px solid transparent;; border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                    <tr style="width:100%">
                                                        <td t-esc="round(sub_total_amount,2)"/>
                                                    </tr>
                                                </table>
                                            </td>
                                            <t t-set="serial" t-value="serial+1"/>
                                        </tr>
                                    </t>
                                    <tr style="background-color:#FFFFFF; border-right:0px solid transparent; border-left:0px solid transparent;">
                                        <td
                                                t-attf-colspan="{{s_c + 6}}"/>
                                    </tr>
                                    <tr style="background-color:#FFFFFF; width:100%">
                                        <td style="text-align:left; border-right:0px solid transparent; width:100%; "
                                            t-attf-colspan="3">
                                            <span align="left">Grand Total</span>
                                        </td>
                                        <t t-foreach="data['grand_total']" t-as="gt">
                                            <td style="text-align:center; width:100%;border-left:0px solid transparent;border-right:0px solid transparent;">
                                                <t t-if="len(str(gt)) > 3">
                                                    <t t-esc="gt"/>
                                                </t>
                                                <t t-elif="len(str(gt)) == 3">
                                                    <t t-esc="'&#160;&#160;' + str(gt) + '&#160;&#160;'"/>
                                                </t>
                                                <t t-elif="len(str(gt)) == 2">
                                                    <t t-esc="'&#160;&#160;&#160;' + str(gt) + '&#160;&#160;&#160;'"/>
                                                </t>
                                                <t t-elif="len(str(gt)) == 1">
                                                    <t t-esc="'&#160;&#160;&#160;&#160;' + str(gt) + '&#160;&#160;&#160;&#160;'"/>
                                                </t>
                                            </td>
                                        </t>
                                        <td style="text-align:center; border-left:white;border-right:white;">
                                            <span t-esc="data['grand_total_qty']"/>
                                        </td>
                                        <td style="text-align:right; border-left:white; border-right:white;">
                                            <t t-if="data['grand_total_qty'] != 0">
                                                <span t-esc="round(amount_total / data['grand_total_qty'],2)"/>
                                            </t>
                                            <t t-else="">
                                                <span>0</span>
                                            </t>
                                        </td>
                                        <td style="text-align:right; border-left:white;">
                                            <span t-esc="round(amount_total,2)"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

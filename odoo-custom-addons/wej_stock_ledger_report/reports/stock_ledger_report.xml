                    }
                </style>
                <t t-set="data" t-value="data"/>
                <t t-foreach="data" t-as="data">
                    <div class="page">
                        <div class="header">
                            <t t-if="not o" t-set="o" t-value="doc"/>
                            <t t-if="not company">
                                <!-- Multicompany -->
                                <t t-if="company_id">
                                    <t t-set="company" t-value="company_id"/>
                                </t>
                                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                                    <t t-set="company" t-value="o.company_id.sudo()"/>
                                </t>
                                <t t-else="else">
                                    <t t-set="company" t-value="res_company"/>
                                </t>
                            </t>
                            <div class="row">
                                <div class="col-1">
                                    <img t-if="not company.logo" t-att-src="'/web/static/src/img/placeholder.png'"
                                         height="70"
                                         border="1" width="70"/>
                                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                         height="70"
                                         border="1" width="70"/>
                                </div>
                                <div class="col-8" style="font-size:20px; text-align:left">
                                    <br/>
                                    <b t-esc="company.name"/>
                                </div>
                                <div class="col-3" style="font-size:13px">
                                    <br/>
                                    <span>
                                        Generated By :&#160;
                                        <t t-esc="user.name"/>
                                    </span>
                                    <br/>
                                    <span>
                                        Printed On :&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;
                                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1"/>
                                <div class="col-2">
                                    <span>Location:&#160;</span>
                                    <t t-if="data['warehouse']">
                                        <span t-esc="data['warehouse']"/>
                                    </t>
                                    <t t-else="">
                                        <span>All</span>
                                    </t>
                                </div>
                                <div class="col-4">
                                    <span>Category:&#160;</span>
                                    <t t-if="data['category']">
                                        <span t-esc="data['category']"/>
                                    </t>
                                    <t t-else="">
                                        <span>All</span>
                                    </t>
                                </div>
                                <div class="col-2">
                                    <span>Color:&#160;</span>
                                    <t t-if="data['color']">
                                        <span t-esc="data['color']"/>
                                    </t>
                                    <t t-else="">
                                        <span>All</span>
                                    </t>
                                </div>
                                <div class="col-2">
                                    <span>Article:&#160;</span>
                                    <t t-if="data['article']">
                                        <span t-esc="data['article']"/>
                                    </t>
                                    <t t-else="">
                                        <span>All</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-1"/>
                                <div class="col-4">
                                    <span>Inventory Date:&#160;</span>
                                    <t t-if="data['date']">
                                        <span t-esc="data['date']"/>
                                    </t>
                                    <t t-else="">
                                        <span>All</span>
                                    </t>
                                </div>
                            </div>
                            <br/>

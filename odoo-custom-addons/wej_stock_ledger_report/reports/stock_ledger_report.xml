                                <tr style="font-size:14px;font-weight:bold;text-align:center; background-color:#000000; color:white;">
                                    <th>Sr. No.</th>
                                    <th>Article</th>
                                    <th>Color</th>
                                    <t style="width:50%;">
                                        <t t-set="s_c" t-value="0"/>
                                        <th t-foreach="size" t-as="s">
                                            <t t-set="s_c" t-value="s_c+1"/>
                                            <t t-esc="s"/>
                                        </th>
                                    </t>
                                    <th>Total Qty</th>
                                    <th>Rate</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="serial" t-value="1"/>
                                <t t-set="null" t-value="[]"/>
                                <t t-set="qty_total" t-value="0"/>
                                <t t-set="amount_total" t-value="0"/>
                                <t t-set="sub_total_qty" t-value="0"/>
                                <t t-set="sub_total_amount" t-value="0"/>
                                <t t-set="sub_total_price_unit" t-value="0"/>
                                <t t-if="data['lis_pro']">
                                    <t t-foreach="data['lis_pro']" t-as="lp">
                                        <t t-set="counter_row" t-value="0"/>
                                        <t t-set="sub_total_price_unit" t-value="0"/>

                                        <tr style="font-size:14px;">


                                            <td style="text-align:center">
                                                <span t-esc="serial"/>
                                            </td>

                                            <td t-esc="lp['article']"/>
                                            <td>
                                                <div align="center">
                                                    <t t-foreach="lp['pro_name_color']" t-as="lc">
                                                        <table class="table"
                                                               style="text-align:center; border-bottom: 1px solid black; border-right:0px solid transparent;;border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                            <tr>
                                                                <t t-set="col" t-value="lc['color_in_line']"/>
                                                                <td t-esc="col"/>
                                                            </tr>
                                                        </table>
                                                    </t>
                                                    <span>Total</span>
                                                </div>

                                            </td>

                                            <td t-attf-colspan="{{s_c}}" style="width:50%">
                                                <div>
                                                    <t t-foreach="lp['pro_name_color']" t-as="ls">
                                                        <table class="table o_invisible_border">
                                                            <tr style="width:100%; text-align:center; border-bottom: 1px solid black; border-right:0px solid transparent;;border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                                <t t-foreach="ls['color_wise_size']" t-as="lsc">
                                                                    <t t-if="len(str(lsc)) > 3">
                                                                        <td t-esc="lsc"/>
                                                                    </t>
                                                                    <t t-elif="len(str(lsc)) == 3">
                                                                        <td t-esc="'&#160;&#160;' + str(lsc) +'&#160;&#160;'"/>
                                                                    </t>
                                                                    <t t-elif="len(str(lsc)) == 2">
                                                                        <td t-esc="'&#160;&#160;&#160;' + str(lsc) + '&#160;&#160;&#160;'"/>
                                                                    </t>
                                                                    <t t-elif="len(str(lsc)) == 1">
                                                                        <td t-esc="'&#160;&#160;&#160;&#160;' + str(lsc) + '&#160;&#160;&#160;&#160;'"/>
                                                                    </t>

                                                                </t>
                                                            </tr>
                                                        </table>
                                                    </t>
                                                    <table class="table o_invisible_border">
                                                        <tr style="width:100%; text-align:center; border-bottom: 1px solid black; border-right:0px solid transparent;;border-left:0px solid transparent;; border-top:0px solid transparent;">
                                                            <t t-foreach="lp['sub_total_artical']" t-as="sta">
                                                                <t t-if="len(str(sta)) > 3">
                                                                    <td t-esc="sta"/>
                                                                </t>
                                                                <t t-elif="len(str(sta)) == 3">
                                                                    <td t-esc="'&#160;&#160;' + str(sta) + '&#160;&#160;'"/>
                                                                </t>
                                                                <t t-elif="len(str(sta)) == 2">
                                                                    <td t-esc="'&#160;&#160;&#160;' + str(sta) + '&#160;&#160;&#160;'"/>
                                                                </t>
                                                                <t t-elif="len(str(sta)) == 1">
                                                                    <td t-esc="'&#160;&#160;&#160;&#160;' + str(sta) + '&#160;&#160;&#160;&#160;'"/>

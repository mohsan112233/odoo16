<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="advance_portal_assets_common"
              inherit_id="website.assets_frontend" name="Advance Adjustment Assets">
        <xpath expr="." position="inside">
          <script type="text/javascript"
                  src="/sg_skip_installment_portal/static/src/js/skip_installment.js"></script>
      </xpath>
    </template>
    <template id="advance_portal_assets_backend"
              inherit_id="website.assets_backend" name="Advance Adjustment Assets">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript"
                    src="/sg_skip_installment_portal/static/src/js/skip_installment.js"></script>
        </xpath>
    </template>
</odoo>
